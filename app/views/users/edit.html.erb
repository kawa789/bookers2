<div class="container">

   <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
    <% @user.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
   <% end %>

   <h2>User info</h2>
        <%= form_with model: @user, local: true do |f| %>
        <div class="form-group"><label>Name</label><br><%= f.text_field :name, class: "name col" %></div>
        <div class="form-group"><label>Image</label><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-image" %></div>
        <div class="form-group"><label>Introduction</label></div><%= f.text_area :introduction, class: "introduction col" %>
        <div class="form-group"><%= f.submit "Update User", class: "edit_user#{current_user.id} btn btn-secondary" %></div>
        <% end %>

</div>

