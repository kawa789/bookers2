    <%= @book.errors.count %>error prohibited this obj from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <div class="container">
    <div class="row">

      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book_new, local:true do |f| %>
         <h4>Title</h4>
         <%= f.text_field :title %>
         <h4>Opinion</h4>
         <%= f.text_area :body %>
         <%= f.submit "Create Book" %>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br><%= link_to user_path(@book.user_id) do %><%= @book.user.name %><% end %></td>
              <td><%= link_to book_path do %>
                  <p><%= @book.title %></p>
                  <% end %>
              </td>
              <td><%= @book.body %></td>

              <% if @book.user == current_user %>
              <td>
                <%=link_to "Edit",edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                <%=link_to "Destroy",book_path(@book.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか?" %>
              </td>
              <% end %>

            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>





