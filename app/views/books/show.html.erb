<div>
  <%= attachment_image_tag @book, :book %>
  <h1>Book detail<h1>
    <p><%= attachment_image_tag @book, :book, :fill, 60, 60, fallback: "no_image.jpg" %></p>
    <p><%= @book.user.name %></p>
    <p><%= @book.title %></p>
    <p><%= @book.body %></p>
    <% if @book.user == current_user %>
     <%= link_to "Destroy", book_path(@book), method: :delete %>
    <% end %>
    
</div>

