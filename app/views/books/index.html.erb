<% @books.each do |book| %>
<div>
  <%= attachment_image_tag book, :book %>
  <p>投稿ユーザー画像: <%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <%= link_to book_path(book.id) do %>
  <p>Title:<%= book.title %></p>
  <% end %>
  <p>Opinion:<%= book.body %></p>
</div
<% end %>
