<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <img class="attachment user profile_image fallback" src="/assets/no_image.jpg">
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th>???</th>
            </tr>
            <tr>
              <th>introduction</th>
              <th>???</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path(@user)"></a>
        </div>
        <h2 class="mt-3">New Book</h2>
        <% if @book.errors.any? %>
         <%= @book.errors.count %>error prohibited this obj from being saved:
         <% @book.errors.full_messages.each do |message| %>
          <%= message %>
         <% end %>
        <% end %>

        <%= form_with model: @book, local:true do |f| %>
         <h4>Title</h4>
         <%= f.text_field :title %>
         <h4>Opinion</h4>
         <%= f.text_area :body %>
         <div class="form-group">
           <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
         </div>
        <% end %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag book, :book %>
                <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                <p><%= book.title %></p>
                <% end %>
              </td>
              <td>
                <p><%= book.body %></p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
    </div>
  </div>
</main>

